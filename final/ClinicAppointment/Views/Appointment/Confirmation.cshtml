@using ClinicAppointment.Models
@model Appointment
@{
    ViewData["Title"] = "Appointment Confirmed";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Appointment/Book">Book Appointment</a></li>
            <li class="breadcrumb-item active">Confirmation</li>
        </ol>
    </nav>

    <div class="text-center">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>
        
        <h2>Your appointment is confirmed!</h2>

        <div class="card mt-4">
            <div class="card-header">
                <h3>Appointment Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 text-md-end"><strong>Date:</strong></div>
                    <div class="col-md-6 text-md-start">@Model.AppointmentDate.ToString("dddd, MMMM dd, yyyy")</div>
                </div>
                <div class="row">
                    <div class="col-md-6 text-md-end"><strong>Time:</strong></div>
                    <div class="col-md-6 text-md-start">@Model.AppointmentDate.ToString("hh:mm tt")</div>
                </div>
                <div class="row">
                    <div class="col-md-6 text-md-end"><strong>Type:</strong></div>
                    <div class="col-md-6 text-md-start">@Model.AppointmentType</div>
                </div>
                <div class="row">
                    <div class="col-md-6 text-md-end"><strong>Confirmation #:</strong></div>
                    <div class="col-md-6 text-md-start">@Model.ConfirmationNumber</div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-primary">Return Home</a>
        </div>
    </div>
</div> 